@Article{SN-Fahmy1993127,
	author = {Fahmy, Hossam Mahmoud Ahmad},
	title = {Analysis of Petri nets by partitioning: splitting places or transitions},
	journal = {International Journal of Computer Mathematics},
	year = 1993,
	volume = 48,
	number = {3-4},
