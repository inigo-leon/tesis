@Article{EPN-PROP-Silva2002314,
	author = {Silva, M. and Recalde, L.},
	title = {Petri nets and integrality relaxations: A view of continuous petri net models},
	journal = {IEEE Transactions on Systems, Man and Cybernetics Part C: Applications and Reviews},
	year = 2002,
	volume = 32,
	number = 4,
	pages = {314-327},
	doi = {10.1109/TSMCC.2002.806063},
	note = {cited By 102},
	url = {http://www.scopus.com/inward/record.url?eid=2-s2.0-0036881072&partnerID=40&md5=09e69d22f01a84832ec535839d341f3a},
	affiliation = {Depto. de Informatica, Centro Politecnico Superior, Universidad de Zaragoza, Maria de Luna 3, E-50015 Zaragoza, Spain},
	abstract = {Petri nets are formalisms for the modeling of discrete event dynamic systems (DEDS). The integrality of the marking and of the transitions firing counters is a clear reflection of this. To reduce the computational complexity of the analysis or synthesis of Petri nets, two relaxations have been introduced at two different levels: (1) at net level, leading to continuous [1]-[3] net systems; (2) at state equation (or fundamental equation) level, which has allowed to obtain systems of linear inequalities, or linear programming problems [4]-[6]. These relaxations are mainly related to the fractional firing of transitions, which implies the existence of non-integer markings. For instance, a first-order continuization transforms a discrete and stochastic model, into a continuous and deterministic 'approximated' model. The purpose of our work is to give an overview of this energing field. It is focused on the relationship between the properties of (discrete) PNs and the corresponding properties of their continuous approximation. Through the interleaving of qualitative and quantitative techniques, surprising results can be obtained from the analysis of these continuous systems. For these approximations to be 'acceptable', it is necessary that large markings (populations) exist. It will also be seen, however, that not every populated net system can be continuized. In fact, there exist systems with 'large' populations for which continuization does not make sense. The possibility of expressing non-linear behaviors may lead to deterministic continuous differential systems with complex behaviors (orbits, limit cycles, different attractors, and chaos).},
	author_keywords = {Continuization;  Integer relaxation;  Nonlinear-linear differential systems;  Petri net},
	document_type = {Article},
	source = {Scopus}
