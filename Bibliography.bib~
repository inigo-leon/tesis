@Conference{G-EPN-Jensen1985723,
	author = {Jensen, Kurt},
	title = {INTRODUCTION TO HIGH-LEVEL PETRI NETS},
	journal = {Proceedings - IEEE International Symposium on Circuits and Systems},
	year = 1985,
